@model PromptEnhancer.Models.ResultModel

@if (!string.IsNullOrEmpty(Model?.SearchResult))
{
    <div>
        <strong>Search Result:</strong> @Model.SearchResult
    </div>
}
@if (!string.IsNullOrEmpty(Model?.Prompt))
{
    <div>
        <strong>Prompt:</strong> @Model.Prompt
    </div>
}
@if (!string.IsNullOrEmpty(Model?.AIResult?.AIOutput))
{
    <div>
        <strong>Result of the AI:</strong> @Model.AIResult.AIOutput
    </div>
}
@if (Model?.AIResult?.UsedURLs is not null)
{
    <div>
        <strong>Sources:</strong>
        <ul>
            @foreach (var url in Model.AIResult.UsedURLs.Where(u => !string.IsNullOrWhiteSpace(u)))
            {
                <li><a href="@url" target="_blank" rel="noopener noreferrer">@url</a></li>
            }
        </ul>
    </div>
}
@if (Model?.AIResult?.TokensUsed is not null)
{
    <div>
        <strong>Total tokens used:</strong> @Model.AIResult.TokensUsed
    </div>
}